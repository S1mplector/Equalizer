<Window x:Class="Equalizer.Presentation.Controls.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick Color" Width="320" Height="260" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Color preview" FontWeight="Bold" Margin="0,0,0,4"/>
            <Border x:Name="ColorPreview" Height="32" CornerRadius="4" BorderThickness="1" BorderBrush="#66000000"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="R" Width="20" VerticalAlignment="Center"/>
                <Slider x:Name="ColorR" Minimum="0" Maximum="255" Width="210"/>
                <TextBox x:Name="ColorRValue" Width="40" TextAlignment="Right" Margin="4,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="G" Width="20" VerticalAlignment="Center"/>
                <Slider x:Name="ColorG" Minimum="0" Maximum="255" Width="210"/>
                <TextBox x:Name="ColorGValue" Width="40" TextAlignment="Right" Margin="4,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="B" Width="20" VerticalAlignment="Center"/>
                <Slider x:Name="ColorB" Minimum="0" Maximum="255" Width="210"/>
                <TextBox x:Name="ColorBValue" Width="40" TextAlignment="Right" Margin="4,0,0,0"/>
            </StackPanel>
            <Button x:Name="EyedropperButton" Content="Eyedropper" Width="100" HorizontalAlignment="Right" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="OkButton" Content="OK" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

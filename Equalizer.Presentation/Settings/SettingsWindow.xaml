<Window x:Class="Equalizer.Presentation.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Equalizer Settings" Height="360" Width="480" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bars" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <Slider x:Name="BarsSlider" Grid.Row="0" Grid.Column="1" Minimum="8" Maximum="256" TickFrequency="8" IsSnapToTickEnabled="True"/>
        <TextBox x:Name="BarsValue" Grid.Row="0" Grid.Column="2" Margin="8,0,0,0"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Responsiveness" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="RespSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="1" TickFrequency="0.05" Margin="0,8,0,0"/>
        <TextBox x:Name="RespValue" Grid.Row="1" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Smoothing" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="SmoothSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="1" TickFrequency="0.05" Margin="0,8,0,0"/>
        <TextBox x:Name="SmoothValue" Grid.Row="2" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Color (RGB)" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
            <Slider x:Name="ColorR" Minimum="0" Maximum="255" Width="120"/>
            <Slider x:Name="ColorG" Minimum="0" Maximum="255" Width="120" Margin="8,0,0,0"/>
            <Slider x:Name="ColorB" Minimum="0" Maximum="255" Width="120" Margin="8,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical" Margin="8,8,0,0">
            <TextBox x:Name="ColorRValue"/>
            <TextBox x:Name="ColorGValue" Margin="0,4,0,0"/>
            <TextBox x:Name="ColorBValue" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="SaveButton" Content="Save" Width="100" Margin="0,0,8,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
